<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sycs06.san.calculator.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignParentTop="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_alignParentTop="true">

        <TableRow>
            <Button
                android:text="7"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="8"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="9"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="/"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="4"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="5"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="6"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="X"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="1"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="2"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="3"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="-"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="."
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="0"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="="
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>

            <Button
                android:text="+"
                android:textColor="#FFF"
                android:background="#000"
                android:textSize="20dp"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
